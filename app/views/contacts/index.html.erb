<style>
table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  text-align: center;
  padding: 8px;
}

tr:nth-child(even) {background-color: #f2f2f2;}
</style>
<center><h1><u>CONTACTS</u></h1></center>

<center>
<table>
    <tr>
        <th> TITLE </th>
        <th> FIRST NAME </th>
        <th> LAST NAME </th>
        <th> ADDRESS </th>
        <th> PHONE  </th>
        <th> USERNAME </th>
        <th> ACTIONS </th>
    </tr>
    <% @contacts.each do |contact|%>
    <tr>
            <td><%= contact.title%></td>
            <td><%= contact.first_name%></td>
            <td><%= contact.last_name%></td>
            <td><%= contact.address%></td>
            <td><%= contact.phone%></td>
            <td><%= contact.user_name%></td>
            <td>
                <%= link_to 'Edit',edit_contact_path(contact)%>
                <br>
                <%= link_to 'Delete',delete_page_path(contact), method: :delete%>
            </td>
    </tr>
     <%end%>
</table>

<p> 
<%= link_to 'Create a new contact',new_contact_path%>
</center>